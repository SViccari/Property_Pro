<%= form_for @building do |f| %>
  <%- if @building.errors.size > 0 -%>
  <ul class="errors">
    <%- @building.errors.full_messages.each do |error| -%>
      <li><%= error %></li>
    <%- end -%>
  </ul>
  <%- end -%>
  
  <div class="form-header">
  <h1>Edit Building Information</h1>
  </div>

  <div>
    <%= f.label :street_address %><br>
    <%= f.text_field :street_address %>
  </div>

  <div>
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state %><br>
    <%= f.select :state, options_for_select(Building.states, selected: @building.state) %>
    <%# select_tag "building[state]",
      options_for_select(Building.states) %>
  </div>

  <div>
    <%= f.label :postal_code %><br>
    <%= f.text_field :postal_code %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div><br>

  <div>
    <%= f.submit 'Save' %>
  </div><br>
<%- end -%>

<%= link_to 'Home', buildings_path %>
